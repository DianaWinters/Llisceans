<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef Name="Arachne_FriendlyFactionBase" Abstract="True">
    <goodwillDailyGain>0.20</goodwillDailyGain>
    <goodwillDailyFall>0.20</goodwillDailyFall>
  </FactionDef>

  <FactionDef ParentName="Arachne_FriendlyFactionBase" Name="Arachne_ArachneColonyFactionBase" Abstract="True">
    <pawnSingular>settler</pawnSingular>
    <pawnsPlural>settlers</pawnsPlural>
    <categoryTag>Tribal</categoryTag>
    <listOrderPriority>30</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>elder</leaderTitle>
    <factionNameMaker>NamerFactionTribal</factionNameMaker>
    <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
    <techLevel>Neolithic</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>Tribal</li>
        </categories>
        <commonality>0.95</commonality>
      </li>
    </backstoryFilters>
    <geneticVariance>0.8</geneticVariance>
    <hairTags>
      <li>Rural</li>
    </hairTags>
    <caravanTraderKinds>
      <li>Caravan_Tribal_BulkGoods</li>
      <li>Caravan_Tribal_CombatSupplier</li>
      <li>Caravan_Tribal_Exotic</li>
      <li>Caravan_Tribal_PirateMerchant</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Tribal_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Tribal_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <!-- Normal fights, standard mix -->
        <kindDef>Combat</kindDef>
        <options>
		
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>

        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Arachne_Trader>1</Arachne_Trader>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2</Alpaca>
          <Elephant>1</Elephant>
        </carriers>
        <guards>

        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>

        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>

  <FactionDef ParentName="Lliscean_LlisceanColonyFactionBase">
    <defName>ArachneColony</defName>
    <label>Arachne Colony</label>
    <description>A colony of Arachne Settlers</description>
    <fixedName>Arachne Colony</fixedName>
    <colorSpectrum>
      <li>(200, 225, 200)</li>
    </colorSpectrum>
    <startingGoodwill>25</startingGoodwill>
    <naturalColonyGoodwill>0~50</naturalColonyGoodwill>
    <factionIconPath>World/FriendlyBase</factionIconPath>
    <settlementTexturePath>World/FriendlyBase</settlementTexturePath>
  </FactionDef>

</Defs>